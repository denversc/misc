[user]
  name = Denver Coneybeare
[color]
  ui = auto
[core]
  eol = lf
  editor = nvim
  pager = delta
[alias]
  su = status -uall
  co = checkout
  dt = difftool
  dtc = difftool --cached
  dc = diff --cached
  st = status
  lf = diff-tree --no-commit-id --name-only -r
[push]
  default = upstream
[pull]
  ff = only
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  dark = true      # or light = true, or omit for auto-detection
  side-by-side = true
  line-numbers = true
  hyperlinks = true
[merge]
  conflictstyle = zdiff3
